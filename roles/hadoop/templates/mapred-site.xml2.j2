<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>
<configuration>
<property>   
<name>mapred.job.tracker</name>
<value>{{hostvars[groups['mesos_masters'][0]]['ansible_default_ipv4']['address']}}:{{hadoop.configuration.port_mapred}}</value>
</property> 

<property>  
<name>mapred.jobtracker.taskScheduler</name>  
<value>org.apache.hadoop.mapred.MesosScheduler</value>
</property>

<property>  
<name>mapred.mesos.taskScheduler</name> 
<value>org.apache.hadoop.mapred.JobQueueTaskScheduler </value> 
</property>

<property>  
<name>mapred.mesos.master</name> 
<value>{{zookeeper.configuration.urlbis}}</value>
</property>

<property>
<name>mapred.mesos.executor.uri</name>
<value>hdfs://{{hostvars[groups['mesos_masters'][0]]['ansible_default_ipv4']['address']}}:{{hadoop.configuration.port_mapred}}/hadoop-2.5.0-cdh5.2.0.tar.gz</value>
</property>
</configuration>
